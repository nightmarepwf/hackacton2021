<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorControlNormal">@color/color_primary</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorControlNormal">@color/color_primary</item>
        <item name="backgroundColor">#121212</item>

        <item name="android:windowBackground">#121212</item>
        <item name="android:statusBarColor">#121212</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <item name="materialCalendarTheme">@style/MaterialCalendarTheme</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarHeaderToggleButton">@style/MaterialCalendarHeaderToggleButtonStyle</item>
    </style>

    <style name="MaterialCalendarHeaderToggleButtonStyle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:visibility">gone</item>
    </style>
</resources>
